#!/bin/bash

# Create the SimpleSAMLphp certificates
if [ ! -f /data/wiki/simplesamlphp/certs/saml.crt ] || [ ! -f /data/wiki/simplesamlphp/certs/saml.pem ]; then
  echo "#############################################"
  echo "ðŸ“œ Creating SimpleSAMLphp certificates"
  openssl req -newkey rsa:3072 -new -x509 -days 3652 -nodes \
    -out /data/wiki/simplesamlphp/certs/saml.crt \
    -keyout /data/wiki/simplesamlphp/certs/saml.pem \
    -subj "/CN=$WIKI_HOST"
fi