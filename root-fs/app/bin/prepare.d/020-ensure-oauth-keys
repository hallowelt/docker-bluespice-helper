#!/bin/bash

# Create public and private keys for OAuth2
if [ ! -f /data/wiki/bluespice/oauth_public.key ] || [ ! -f /data/wiki/bluespice/oauth_private.key ]; then
  echo "#############################################"
  echo "ğŸ”‘ Creating OAuth2 keys"
  openssl genrsa \
    -out /data/wiki/bluespice/oauth_private.key 2048
  openssl rsa \
    -in /data/wiki/bluespice/oauth_private.key \
    -pubout \
    -out /data/wiki/bluespice/oauth_public.key
fi
